{
  "name": "reverse-proxy-app",
  "version": "1.0.0",
  "description": "A dynamic TypeScript reverse proxy with health checks, metrics, and admin API",
  "main": "dist/proxy.js",
  "scripts": {
    "test": "jest --verbose",
    "test:i": "jest --config jest.integration.config.js",
    "smoke": "bash scripts/e2e.sh",
    "build": "tsc",
    "start": "node dist/proxy.js",
    "dev": "ts-node-dev --respawn --transpile-only src/proxy.ts"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "dotenv": "^16.5.0",
    "http-proxy": "^1.18.1",
    "nodemailer": "^6.4.18",
    "opossum": "^8.4.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "pm2": "^6.0.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.87",
    "@types/nodemailer": "^6.4.8",
    "@types/opossum": "^8.1.8",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
