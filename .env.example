# SSL certificate & key paths (for HTTPS)
SSL_KEY_PATH=ssl/private.key          # Path to your SSL private key
SSL_CERT_PATH=ssl/certificate.crt     # Path to your SSL certificate (full chain)

# Proxy ports
HTTP_REDIRECT_PORT=8080               # Port for HTTP â†’ HTTPS redirect
HTTPS_PORT=8443                       # Port for HTTPS proxy traffic

# Admin API credentials
ADMIN_USERNAME=admin                  # Username for the secure Admin API
ADMIN_PASSWORD=yourStrongAdminPass    # Password for the secure Admin API

# Email alert settings (used if SENDGRID_API_KEY unset)
SMTP_HOST=smtp.example.com            # SMTP server host
SMTP_PORT=587                         # SMTP server port
SMTP_USER=username@example.com        # SMTP username
SMTP_PASS=yourSmtpPassword            # SMTP password
EMAIL_FROM=no-reply@yourdomain.com    # Sender address for alerts
EMAIL_TO=alerts@yourdomain.com        # Recipient address for alerts

# SendGrid HTTP API key (optional, overrides SMTP settings)
SENDGRID_API_KEY=SG.your_real_key_here

# WAF settings
WAF_ENABLED=false                     # Set to true to enable Web Application Firewall
WAF_RULES_PATH=config/waf-rules.json  # Path to your WAF rules file
